{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Music Organizer Assistant",
  "version": "0.0.0",
  "identifier": "com.musicorganizer.assistant",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3001"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Music Organizer Assistant",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "skipTaskbar": false,
        "visible": true,
        "decorations": true,
        "alwaysOnTop": false,
        "closable": true,
        "minimizable": true,
        "maximizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png"
    ]
  }
}
